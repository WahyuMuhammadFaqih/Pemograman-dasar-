    {
      "cell_type": "code",
      "source": [
        "# jawaban Tugas\n",
        "# Program Kasir Sederhana\n",
        "\n",
        "# Input data\n",
        "item1 = float(input(\"Masukkan harga item 1: \"))\n",
        "item2 = float(input(\"Masukkan harga item 2: \"))\n",
        "item3 = float(input(\"Masukkan harga item 3: \"))\n",
        "member = input(\"Apakah Anda member? (ya/tidak): \").lower()\n",
        "\n",
        "# 1. Hitung subtotal\n",
        "subtotal = item1 + item2 + item3\n",
        "\n",
        "# 2. Diskon langsung pakai ekspresi logika\n",
        "diskon = (0.15 * subtotal) * ((member == \"ya\") and (subtotal > 100000))\n",
        "\n",
        "# 3. Harga setelah diskon\n",
        "harga_setelah_diskon = subtotal - diskon\n",
        "\n",
        "# 4. Hitung PPN (11%)\n",
        "ppn = 0.11 * harga_setelah_diskon\n",
        "\n",
        "# 5. Total akhir\n",
        "total_akhir = harga_setelah_diskon + ppn\n",
        "\n",
        "# Output hasil\n",
        "print(\"\\n--- STRUK PEMBAYARAN ---\")\n",
        "print(f\"Subtotal: Rp {subtotal:,.0f}\".replace(\",\", \".\"))\n",
        "print(f\"Diskon: Rp {diskon:,.0f}\".replace(\",\", \".\"))\n",
        "print(f\"Harga setelah diskon: Rp {harga_setelah_diskon:,.0f}\".replace(\",\", \".\"))\n",
        "print(f\"PPN 11%: Rp {ppn:,.0f}\".replace(\",\", \".\"))\n",
        "print(f\"Total yang harus dibayar: Rp {total_akhir:,.0f}\".replace(\",\", \".\"))"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "outputId": "92029a37-4623-4a8b-9723-d43f6118dce6",
