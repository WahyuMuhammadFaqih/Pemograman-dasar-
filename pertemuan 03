      "cell_type": "code",
      "source": [
        "# jawaban latihan nomor 2\n",
        "# 1. Fungsi Input: Menerima masukan dari pengguna\n",
        "nama = input(\"Masukkan nama Anda: \")\n",
        "berat_kg = float(input(\"Masukkan berat badan (kg): \"))\n",
        "tinggi_cm = float(input(\"Masukkan tinggi badan (cm): \"))\n",
        "\n",
        "# 2. Operasi Aritmatika\n",
        "tinggi_m = tinggi_cm / 100  # Konversi cm ke meter\n",
        "# Rumus IMT: Berat (kg) / Tinggi^2 (m)\n",
        "imt = berat_kg / (tinggi_m ** 2)\n",
        "\n",
        "print(f\"Nama: {nama}\")\n",
        "print(f\"Tinggi (m): {tinggi_m:.2f}\")\n",
        "print(f\"Berat (kg): {berat_kg:.2f}\")\n",
        "print(f\"Nilai IMT Anda adalah: {imt:.2f}\")"
      ],
