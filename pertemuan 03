        "# ekspresi\n",
        "\n",
        "# menghitung nilai akhir mahasiswa\n",
        "tugas = float(input(\"nilai tugas: \"))\n",
        "kuis = float(input(\"nilai kuis: \"))\n",
        "ats = float(input(\"niali ats: \"))\n",
        "aas = float(input(\"nilai aas: \"))\n",
        "praktikum = float(input(\"nilai praktikum: \"))\n",
        "\n",
        "# bobot nilai akhir = tugas 20%, kuis 10%, ats 25%, aas 30%, praktikum 15%\n",
        "nilai_akhir = (0.2 * tugas) + (0.1 * kuis) + (0.25 * ats) + (0.3 * aas) + (0.15 * praktikum)\n",
        "standar_kelulusan = float(input(\"standar kelulusan: \"))\n",
        "apakah_lulus = nilai_akhir >= standar_kelulusan\n",
        "perlu_remedial = nilai_akhir < standar_kelulusan\n",
        "\n",
        "print(\"Nilai akhir:\", nilai_akhir)\n",
        "print(\"Standar kelulusan:\", standar_kelulusan)\n",
        "print(\"Apakah mahasiswa Lulus?\", apakah_lulus)\n",
        "print(\"Perlu remedial?\", perlu_remedial)"
